{
  "filters": [
    {
      "id": "example-keyword-filter",
      "chats": [1234567890, 9876543210],
      "rules": {
        "deny": {
          "op": "OR",
          "args": [
            {"type": "kw", "value": "spam"},
            {"type": "re", "pattern": "buy\\s+.*\\s+now"}
          ]
        },
        "allow": {
          "op": "AND",
          "args": [
            {"type": "kw", "value": "important"},
            {"type": "kw", "value": "update"}
          ]
        }
      },
      "notify": {
        "urgent": true,
        "forward": true,
        "recipients": ["admin_main", "user_alice"],
        "template": ""
      }
    },
    {
      "id": "example-regex-filter",
      "chats": [1112223334],
      "rules": {
        "allow": {
          "type": "re",
          "pattern": "\\bCVE-\\d{4}-\\d{4,5}\\b"
        }
      },
      "notify": {
        "urgent": true,
        "forward": true,
        "recipients": ["chat_team", "admin_main"],
        "template": ""
      }
    },
    {
      "id": "example-or-filter",
      "chats": [-1005556667778],
      "rules": {
        "allow": {
          "op": "OR",
          "args": [
            {"type": "kw", "value": "golang"},
            {"type": "kw", "value": "rust"},
            {"type": "kw", "value": "python"}
          ]
        }
      },
      "notify": {
        "urgent": false,
        "forward": false,
        "recipients": ["channel_announcements"],
        "template": ""
      }
    },
    {
      "id": "example-at-least-filter",
      "chats": [9998887776],
      "rules": {
        "allow": {
          "op": "AT_LEAST",
          "n": 2,
          "args": [
            {"type": "kw", "value": "urgent"},
            {"type": "kw", "value": "help"},
            {"type": "kw", "value": "emergency"},
            {"type": "kw", "value": "asap"}
          ]
        }
      },
      "notify": {
        "urgent": true,
        "forward": true,
        "recipients": ["admin_main"],
        "template": ""
      }
    },
    {
      "id": "example-not-filter",
      "chats": [1112223334],
      "rules": {
        "allow": {
          "op": "AND",
          "args": [
            {"type": "kw", "value": "meeting"},
            {
              "op": "NOT",
              "args": [
                {"type": "kw", "value": "canceled"}
              ]
            }
          ]
        }
      },
      "notify": {
        "urgent": false,
        "forward": true,
        "recipients": ["chat_team"],
        "template": ""
      }
    }
  ]
}